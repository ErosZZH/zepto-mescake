<!DOCTYPE html>
<html>
<head>
  <title>MES-会员注册</title>
  <% include includes/static_config %>
  <% include includes/static_loader %>
  <% include includes/head_script %>
</head>
<body>
  <% include includes/header_v2 %>
  <div class="content-area">
    <div class="content">
      <div class="dialog-con dialog" style="z-index:1900; padding-top:60px;">
        <form>
          <div class="dialog-head">
            <p class="dia-title">新用户注册</p>
          </div>
          <div class="check-container">
            <input type="text" class="global-input slide-code-btn" placeholder="请输入手机号码" style="width:198px;" id="username">
            <span class="tips-container" style="display:none" id="username_error">输入错误</span><!-- 错误信息容器,出现2秒后消失 -->
          </div><a href="#" id="get_vaild_code" class="btn vert-btn code-btn">获取验证码</a>
	  <a style="display:none;width:auto" href="#" class="btn vert-btn code-btn" id="vaild_code_sended">已发送</a>
          <div class="check-container">
            <input type="password" class="global-input" placeholder="请输入短信验证码" id="vaild_code">
            <span class="tips-container" style="display:none" id="vaildcode_error">输入错误</span><!-- 错误信息容器,出现2秒后消失 -->
          </div>
          
          <div class="check-container">
            <input type="password" id="password" class="global-input" placeholder="设置6位以上登录密码">
            <span class="tips-container" style="display:none">输入错误</span><!-- 错误信息容器,出现2秒后消失 -->
          </div>
          <div class="single-btn-area">
            <input class="btn status1-btn long-btn" type="button" value="注册" id="do_signup">
            <p class="regis-tip">如果您已是注册用户，请您<a href="/login">登录</a></p>
          </div>
          
        </form>
      </div>
    </div>
  </div>
  <script>
  (function(){
	var VaildLock = false;
	var JQ ={
		'get_vaild_code':$('#get_vaild_code'),
		'vaild_code_sended':$('#vaild_code_sended')
	}
	
	
	JQ.vaild_code_sended.click(function(){
		
	});

	JQ.get_vaild_code.click(function(){
		var mobile = $('#username').val();
		if(!M.IS_MOBILE(mobile)){
			M.inputError('username_error');
			return;
		}
		if(VaildLock){
		  M.confirm('请在60秒之后再新发送验证码');
                  return;
		}

		//防止频繁发送
		VaildLock = true;
		JQ.get_vaild_code.hide();
		JQ.vaild_code_sended.show();
		setTimeout(function(){
			JQ.get_vaild_code.show();
			JQ.vaild_code_sended.hide();
			VaildLock = false;
		},60000);
		
		$.post('/signupVaildCode?mod=account&action=signup_vaild_code',{
			mobile:mobile
		  },function(d){
		  
		  });
		return false;
	});

	$('#do_signup').click(function(){
		var password = $('#password').val();
		var username = $('#username').val();
		var vaild_code = $('#vaild_code').val();
		
		if(!M.IS_MOBILE(username)){
			M.inputError('username_error');
			return;
		}

		if(vaild_code.length!=6){
			M.inputError('vaildcode_error');
			return;
		}

		if(password.length<6){
			M.inputError('password_error');
			return;
		}
		$.post('/signup?mod=account&action=signup',{
			password:password,
			username:username,
			'vaild_code':vaild_code
		},function(d){
			if(d.code == 10010){
				$('#vaildcode_error').show();
				setTimeout(function(){
					$('#vaildcode_error').hide();
				},2000);
			}

			if(d.code == 0){
			  M.confirm('注册成功！将跳转到首页...');
			  setTimeout(function(){
				location.href = '/';
			  },2000);
			}else{
			   M.confirm('注册失败！可能是你使用的手机号已经被注册！');
		    }
		});
		return false;
	});
})();
  </script>
  <% include includes/baidu %>
</html>